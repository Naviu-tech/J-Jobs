---
import BaseLayout from "./BaseLayout.astro";
import ContactForm from "../components/recruiting/ContactForm.astro";
import Breadcrumbs from "../components/recruiting/Breadcrumbs.astro";

interface Props {
  title: string;
  description: string;
}

const { title, description } = Astro.props;

const paths = [
  { text: "Home", href: "/" },
  { text: "Recruiting", href: "/recruiting", current: true }
];
---

<BaseLayout title={title} description={description}>
  <div class="max-w-[1440px] mx-auto">
    <div class="px-4 md:px-6">
      <Breadcrumbs paths={paths} />
    </div>
    
    <div class="px-4 md:px-6">
      <div class="lg:flex lg:gap-8">
        <!-- Main Content -->
        <div class="flex-1">
          <slot />
        </div>

        <!-- Sidebar -->
        <div class="w-full lg:w-[400px]">
          <div class="lg:sticky lg:top-8">
            <div class="bg-white p-6 sm:p-8 rounded-3xl shadow-2xl shadow-slate-200/20">
              <ContactForm />
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</BaseLayout> 